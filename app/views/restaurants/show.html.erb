<h1><%= link_to @restaurant.name, restaurant_path(@restaurant) %></h1>

<% if @restaurant.average_rating != "N/A" %>
  <% @restaurant.average_rating.times do %>
    <span class="glyphicon glyphicon-star"></span>
  <% end %>
<% end %>
<h3>Reviews</h3>
<% if @restaurant.reviews.count == 0 %>
  No ratings yet, be the first to rate <%= link_to @restaurant.name, new_restaurant_review_path(@restaurant) %>.
<% end %>
<% @restaurant.reviews.each do |review| %>
  <%= review.comment %> - <%= review.rating %>/5
<% end %>