<!DOCTYPE html>
<html>
<head>
  <title>YelpClone</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'shared/nav' %>
<div class="wrapper">
  <% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>"><button type="button" class="close" data-dismiss="alert">&times;</button><%= value %></div>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
